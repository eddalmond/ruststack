# Dockerfile for releases - uses pre-built binary
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    python3 \
    && rm -rf /var/lib/apt/lists/*

COPY artifacts/ruststack-linux-x86_64 /usr/local/bin/ruststack
RUN chmod +x /usr/local/bin/ruststack

EXPOSE 4566

ENV RUST_LOG=info

ENTRYPOINT ["ruststack"]
CMD ["--host", "0.0.0.0", "--port", "4566"]
